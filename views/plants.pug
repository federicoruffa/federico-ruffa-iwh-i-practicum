// doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Plants
        table
            thead
                tr
                    th Name
                    th Description
                    th Scientific Name
            tbody
                each plant in data
                    tr
                        td #{plant.properties.name}
                        td #{plant.properties.description}
                        td #{plant.properties.scientific_name}